# hyper + hjkl: focus windows
rctrl + ralt + rshift + rcmd - h: yabai -m window --focus west
rctrl + ralt + rshift + rcmd - j: yabai -m window --focus south
rctrl + ralt + rshift + rcmd - k: yabai -m window --focus north
rctrl + ralt + rshift + rcmd - l: yabai -m window --focus east

# hyper + i: focus previous window
rctrl + ralt + rshift + rcmd - i : yabai -m window --focus recent

# add left option to swap windows
rctrl + ralt + rshift + rcmd + lalt - k: yabai -m window --swap north
rctrl + ralt + rshift + rcmd + lalt - j: yabai -m window --swap south
rctrl + ralt + rshift + rcmd + lalt - l: yabai -m window --swap east
rctrl + ralt + rshift + rcmd + lalt - h: yabai -m window --swap west

# add left shift to warp windows (force them to share space w/ other windows)
rctrl + ralt + rshift + rcmd + lshift - k: yabai -m window --warp north
rctrl + ralt + rshift + rcmd + lshift - j: yabai -m window --warp south
rctrl + ralt + rshift + rcmd + lshift - l: yabai -m window --warp east
rctrl + ralt + rshift + rcmd + lshift - h: yabai -m window --warp west

# hyper + enter: toggle fullscreen
rctrl + ralt + rshift + rcmd - return: yabai -m window --toggle zoom-fullscreen
# hyper + f: toggle float
rctrl + ralt + rshift + rcmd - f: yabai -m window --toggle float && yabai -m window --grid 4:4:1:1:2:2
