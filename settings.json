// vim: ft=jsonc
{
  "breadcrumbs.enabled": false,
  "editor.autoClosingQuotes": "beforeWhitespace",
  "editor.cursorBlinking": "phase",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontFamily": "PragmataPro Mono Liga",
  "editor.fontLigatures": true,
  "editor.fontSize": 12,
  "editor.formatOnSave": true,
  "editor.inlineHints.fontFamily": "monospace",
  "editor.lineNumbers": "relative",
  "editor.linkedEditing": true,
  "editor.minimap.enabled": false,
  "editor.renderLineHighlight": "all",
  "editor.renderWhitespace": "selection",
  "editor.semanticHighlighting.enabled": true,
  "editor.snippetSuggestions": "top",
  "editor.suggest.localityBonus": true,
  "editor.suggestSelection": "first",
  "editor.tabCompletion": "on",
  "editor.wordWrap": "on",
  "explorer.confirmDelete": false,
  "explorer.openEditors.visible": 0,
  "files.autoGuessEncoding": false,
  "files.autoSave": "onFocusChange",
  "files.trimFinalNewlines": false,
  "files.trimTrailingWhitespace": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "jest.autoEnable": false,
  "jest.enableCodeLens": false,
  "jest.showCoverageOnLoad": true,
  "settingsSync.keybindingsPerPlatform": false,
  "telemetry.enableCrashReporter": false,
  "telemetry.enableTelemetry": false,
  "terminal.external.osxExec": "iTerm.app",
  "terminal.integrated.fontSize": 12,
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "window.titleBarStyle": "native",
  "workbench.activityBar.visible": false,
  "workbench.colorTheme": "Ayu Mirage",
  "workbench.editor.labelFormat": "short",
  "workbench.iconTheme": "Monokai Pro (Filter Ristretto) Icons",
  "workbench.list.keyboardNavigation": "filter",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.tips.enabled": false,
  // language-specific settings
  "Lua.diagnostics.globals": ["vim", "use"],
  "[lua]": {
    "editor.defaultFormatter": "Koihik.vscode-lua-format"
  },
  // vim
  "vim.leader": ",",
  "vim.highlightedyank.enable": true,
  "vim.easymotion": true,
  "vim.hlsearch": true,
  "vim.replaceWithRegister": true,
  "vim.useSystemClipboard": true,
  "vim.normalModeKeyBindings": [
    {
      "before": ["<CR>"],
      "commands": ["workbench.action.files.save"]
    },
    {
      "before": ["<BS>"],
      "commands": ["workbench.action.openPreviousEditorFromHistory"]
    },
    {
      "before": ["<Space>"],
      "commands": ["workbench.action.showCommands"]
    },
    {
      "before": ["<Esc>"],
      "commands": [":nohl"]
    },
    {
      "before": ["g", "s"],
      "commands": ["editor.action.organizeImports"]
    },
    // leader bindings
    {
      "before": ["<Leader>", "f"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["<Leader>", "r"],
      "commands": ["workbench.action.findInFiles"]
    },
    // unimpaired-like bindings
    {
      "before": ["[", "a"],
      "commands": ["editor.action.marker.prev"]
    },
    {
      "before": ["]", "a"],
      "commands": ["editor.action.marker.next"]
    },
    {
      "before": ["[", "c"],
      "commands": ["workbench.action.editor.previousChange"]
    },
    {
      "before": ["]", "c"],
      "commands": ["workbench.action.editor.nextChange"]
    },
    // subversive-like bindings
    {
      "before": ["s"],
      "after": ["g", "r"]
    },
    {
      "before": ["s", "s"],
      "after": ["g", "r", "r"]
    },
    {
      "before": ["S"],
      "after": ["g", "r", "$"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["H"],
      "after": ["^"]
    },
    {
      "before": ["L"],
      "after": ["$"]
    },
    {
      "before": ["Y"],
      "after": ["y", "$"]
    },
    {
      "before": ["<Tab>"],
      "after": ["%"]
    },
    {
      "before": ["K"],
      "after": ["g", "h"]
    },
    // cutlass-like bindings
    {
      "before": ["g", "m"],
      "after": ["m"]
    },
    {
      "before": ["g", "m", "m"],
      "after": ["m", "'"]
    },
    {
      "before": ["m", "m"],
      "after": ["d", "d"]
    },
    {
      "before": ["m"],
      "after": ["d"]
    },
    {
      "before": ["M"],
      "after": ["D"]
    },
    {
      "before": ["d", "d"],
      "after": ["\"", "_", "d", "d"]
    },
    {
      "before": ["d"],
      "after": ["\"", "_", "d"]
    },
    {
      "before": ["D"],
      "after": ["\"", "_", "D"]
    },
    {
      "before": ["x"],
      "after": ["\"", "_", "x"]
    },
    {
      "before": ["X"],
      "after": ["\"", "_", "X"]
    },
    {
      "before": ["c", "c"],
      "after": ["\"", "_", "c", "c"]
    },
    {
      "before": ["c"],
      "after": ["\"", "_", "c"]
    },
    {
      "before": ["C"],
      "after": ["\"", "_", "C"]
    }
  ],
  "vim.visualModeKeyBindings": [
    {
      "before": [">"],
      "commands": ["editor.action.indentLines"]
    },
    {
      "before": ["<"],
      "commands": ["editor.action.outdentLines"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["<Tab>"],
      "after": ["%"]
    },
    {
      "before": ["H"],
      "after": ["^"]
    },
    {
      "before": ["L"],
      "after": ["$"]
    },
    {
      "before": ["m"],
      "after": ["d"]
    },
    {
      "before": ["M"],
      "after": ["D"]
    },
    {
      "before": ["d"],
      "after": ["\"", "_", "d"]
    },
    {
      "before": ["D"],
      "after": ["\"", "_", "D"]
    },
    {
      "before": ["x"],
      "after": ["\"", "_", "x"]
    },
    {
      "before": ["X"],
      "after": ["\"", "_", "X"]
    },
    {
      "before": ["c"],
      "after": ["\"", "_", "c"]
    },
    {
      "before": ["C"],
      "after": ["\"", "_", "C"]
    }
  ],
  "vim.operatorPendingModeKeyBindingsNonRecursive": [
    {
      "before": ["H"],
      "after": ["^"]
    },
    {
      "before": ["L"],
      "after": ["$"]
    },
    {
      "before": ["<Tab>"],
      "after": ["%"]
    }
  ],
  "vim.insertModeKeyBindingsNonRecursive": [
    {
      "before": ["<C-h>"],
      "after": ["<Left>"]
    },
    {
      "before": ["<C-j>"],
      "after": ["<Down>"]
    },
    {
      "before": ["<C-k>"],
      "after": ["<Up>"]
    },
    {
      "before": ["<C-l>"],
      "after": ["<Right>"]
    }
  ]
}
