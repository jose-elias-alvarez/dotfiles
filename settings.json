// vim: ft=jsonc
{
  "breadcrumbs.enabled": false,
  "customizeUI.activityBar": "bottom",
  "customizeUI.activityBarHideSettings": true,
  "customizeUI.titleBar": "inline",
  "customizeUI.font.regular": "PragmataPro",
  "customizeUI.font.monospace": "PragmataPro Mono",
  "customizeUI.fontSizeMap": {
    "13px": "12px",
    "monospace": "12px"
  },
  "editor.autoClosingQuotes": "beforeWhitespace",
  "editor.cursorBlinking": "phase",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontFamily": "PragmataPro Mono Liga",
  "editor.fontLigatures": true,
  "editor.fontSize": 12,
  "editor.formatOnSave": true,
  "editor.inlineHints.fontFamily": "monospace",
  "editor.lineNumbers": "relative",
  "editor.linkedEditing": true,
  "editor.minimap.enabled": false,
  "editor.renderLineHighlight": "all",
  "editor.renderWhitespace": "selection",
  "editor.semanticHighlighting.enabled": true,
  "editor.snippetSuggestions": "top",
  "editor.suggest.localityBonus": true,
  "editor.suggestSelection": "first",
  "editor.tabCompletion": "on",
  "editor.wordWrap": "on",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.openEditors.visible": 0,
  "files.autoGuessEncoding": false,
  "files.autoSave": "onFocusChange",
  "files.trimFinalNewlines": false,
  "files.trimTrailingWhitespace": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "jest.autoEnable": false,
  "jest.showCoverageOnLoad": true,
  "mdb.confirmRunAll": false,
  "mdb.useDefaultTemplateForPlayground": false,
  "mdb.sendTelemetry": false,
  "settingsSync.keybindingsPerPlatform": false,
  "settingsSync.ignoredSettings": [
    "customizeUI.font.monospace",
    "customizeUI.font.regular",
    "customizeUI.fontSizeMap",
    "customizeUI.titleBar",
    "editor.fontFamily",
    "workbench.colorTheme",
    "workbench.iconTheme"
  ],
  "telemetry.enableCrashReporter": false,
  "telemetry.enableTelemetry": false,
  "terminal.external.osxExec": "iTerm.app",
  "terminal.integrated.fontSize": 12,
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "window.titleBarStyle": "native",
  "workbench.colorTheme": "Horizon",
  "workbench.editor.labelFormat": "short",
  "workbench.iconTheme": "Monokai Pro (Filter Ristretto) Icons",
  "workbench.list.keyboardNavigation": "filter",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.tips.enabled": false,
  "Lua.diagnostics.globals": ["vim", "describe", "it"],
  "[lua]": {
    "editor.defaultFormatter": "Koihik.vscode-lua-format"
  },
  // vim
  "vim.leader": ",",
  "vim.highlightedyank.enable": true,
  "vim.sneak": true,
  "vim.sneakUseIgnorecaseAndSmartcase": true,
  "vim.sneakReplacesF": true,
  "vim.hlsearch": true,
  "vim.replaceWithRegister": true,
  "vim.useSystemClipboard": true,
  "vim.normalModeKeyBindings": [
    {
      "before": ["<CR>"],
      "commands": ["workbench.action.files.save"]
    },
    {
      "before": ["<BS>"],
      "commands": ["workbench.action.openPreviousEditorFromHistory"]
    },
    {
      "before": ["<Space>"],
      "commands": ["workbench.action.showCommands"]
    },
    {
      "before": ["[", "a"],
      "commands": ["editor.action.marker.prev"]
    },
    {
      "before": ["]", "a"],
      "commands": ["editor.action.marker.next"]
    },
    {
      "before": ["[", "c"],
      "commands": ["workbench.action.editor.previousChange"]
    },
    {
      "before": ["]", "c"],
      "commands": ["workbench.action.editor.nextChange"]
    },
    {
      "before": ["g", "s"],
      "commands": ["editor.action.organizeImports"]
    },
    {
      "before": ["g", "i"],
      "commands": ["editor.action.rename"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["H"],
      "after": ["^"]
    },
    {
      "before": ["L"],
      "after": ["$"]
    },
    {
      "before": ["Y"],
      "after": ["y", "$"]
    },
    {
      "before": ["<Tab>"],
      "after": ["%"]
    },
    {
      "before": ["m", "m"],
      "after": ["m", "'"]
    }
  ],
  "vim.visualModeKeyBindings": [
    {
      "before": [">"],
      "commands": ["editor.action.indentLines"]
    },
    {
      "before": ["<"],
      "commands": ["editor.action.outdentLines"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["<Tab>"],
      "after": ["%"]
    },
    {
      "before": ["H"],
      "after": ["^"]
    },
    {
      "before": ["L"],
      "after": ["$"]
    }
  ],
  "vim.operatorPendingModeKeyBindingsNonRecursive": [
    {
      "before": ["H"],
      "after": ["^"]
    },
    {
      "before": ["L"],
      "after": ["$"]
    },
    {
      "before": ["<Tab>"],
      "after": ["%"]
    }
  ],
  "vim.insertModeKeyBindingsNonRecursive": [
    {
      "before": ["<C-h>"],
      "after": ["<Left>"]
    },
    {
      "before": ["<C-j>"],
      "after": ["<Down>"]
    },
    {
      "before": ["<C-k>"],
      "after": ["<Up>"]
    },
    {
      "before": ["<C-l>"],
      "after": ["<Right>"]
    }
  ]
}
